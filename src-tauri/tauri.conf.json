{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:5000",
    "distDir": "../public"
  },
  "package": {
    "productName": "medical-sound",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
				"all": true,
				"scope": ["$APP/*", "$DESKTOP/*"]
			},
			"path": {
				"all": true
			},
			"protocol": {
				"all": true,
				"assetScope": ["$APP/*", "$DESKTOP/*"]
			},
      "window": {
        "center": true,
        "setAlwaysOnTop": true,
        "setFocus": true,
        "setPosition": true,
        "setSize": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "medical-sound",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "center": true,
        "fullscreen": false,
        "height": 300,
        "resizable": false,
        "title": "Medical Sound",
        "visible": false,
        "width": 1280
      },
      {
        "center": true,
        "decorations": false,
        "label": "splashscreen",
        "url": "splashscreen.html",
        "width": 400,
        "height": 200
      }
    ]
  }
}
